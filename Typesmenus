package com.edilson.aps.view;

import com.edilson.aps.controller.Datacontrol;

import java.util.Scanner;

public class Typesmenus {
    private static Scanner scanner = new Scanner(System.in);

    public static void mainMenu() {
        displayText();
        int choice = scanner.nextInt();
        switch (choice) {
            case 1:
                secondMenu(choice);
                break;
            case 2:
                secondMenu(choice);
                break;
            case 3:
                secondMenu(choice);
                break;
            case 4:
                System.out.println("Program ended...");
                System.exit(0);
                break;
            default:
                System.out.println("Please enter a valid amount.");
                mainMenu();
                break;
        }


    }
    public static void secondMenu(int typeOrdering){
        displaySecondText();
        int order = scanner.nextInt();
        switch (order){
            case 1:
                Datacontrol.controler(typeOrdering,order);
                break;
            case 2:
                Datacontrol.controler(typeOrdering,order);
                break;
            case 3:
                Datacontrol.controler(typeOrdering,order);
                break;
            case 4:
                mainMenu();
                break;
            default:
                System.out.println("Please enter a valid amount.");
                break;

        }

    }
    private static void displayText(){
        System.out.println("Choose an ordering method.\n" +
                "1 - QuickSort\n" +
                "2 - SelectionSort\n" +
                "3 - BubbleSort\n" +
                "4 - Exit");
    }
    private static void displaySecondText(){
        System.out.println("Choose an order\n" +
                "1 - Crescente\n" +
                "2 - Decrescente\n" +
                "3 - Aleatorio\n" +
                "4 - voltar");
    }


}
